{
    "compilerOptions": {
        "declaration": true,
        "outDir": "dist/types",
        "jsx": "react",
        "lib": [
            "dom",
            "es2016"
        ],
        "module": "es6",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "target": "es5"
